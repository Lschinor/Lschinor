
def fatorial(n, show=False):
	"""
	Caucula o fatorial de um num:
		-param = O numero deve ser calcado
		-param show = (opcional) mostrar ou nÃ£o na tela
		-param return = retorna o valor fatorial no n
		
	
	
	"""
		
	f = 1
	for c in range(n, 0, -1):
		if show:
			print(c, end='')
			if c > 1:
				print(f"x", end=" ")
			else:
				print(f"=", end= " ")
		f *= c
	return f
			
print(fatorial(5, show=True))
help(fatorial)
